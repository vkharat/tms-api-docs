{
  "components": {
    "schemas": {
      "RoutingDetails": {
        "type": "object",
        "required": ["origin", "destination"],
        "description": "Routing information for the shipment",
        "properties": {
          "origin": {
            "$ref": "#/components/schemas/Location",
            "description": "Origin location of the shipment"
          },
          "destination": {
            "$ref": "#/components/schemas/Location",
            "description": "Destination location of the shipment"
          },
          "via": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Location"
            },
            "description": "Intermediate points in the route"
          },
          "routeType": {
            "type": "string",
            "enum": ["DIRECT", "MULTI_MODAL", "TRANSSHIPMENT", "FEEDER"],
            "description": "Type of routing"
          },
          "preferences": {
            "$ref": "#/components/schemas/RoutingPreferences"
          },
          "restrictions": {
            "$ref": "#/components/schemas/RoutingRestrictions"
          }
        }
      },
      "RoutingPreferences": {
        "type": "object",
        "description": "Preferences for route selection",
        "properties": {
          "priorityFactors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PriorityFactor"
            },
            "description": "Factors affecting route selection"
          },
          "preferredCarriers": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Preferred carrier codes"
          },
          "maxTransshipments": {
            "type": "integer",
            "minimum": 0,
            "description": "Maximum number of transshipments"
          },
          "transitTimeLimit": {
            "$ref": "#/components/schemas/Duration"
          }
        }
      },
      "PriorityFactor": {
        "type": "object",
        "required": ["factor", "priority"],
        "description": "Priority factor for route selection",
        "properties": {
          "factor": {
            "type": "string",
            "enum": ["COST", "TIME", "RELIABILITY", "CO2_EMISSIONS"],
            "description": "Route selection factor"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10,
            "description": "Priority level (1-10)"
          },
          "weight": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Weight in calculation (0-1)"
          }
        }
      },
      "RoutingRestrictions": {
        "type": "object",
        "description": "Restrictions on route selection",
        "properties": {
          "excludedPorts": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Ports to avoid"
          },
          "excludedCountries": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[A-Z]{2}$"
            },
            "description": "Countries to avoid (ISO codes)"
          },
          "transportModes": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["SEA", "AIR", "RAIL", "ROAD"]
            },
            "description": "Allowed transport modes"
          },
          "vesselRestrictions": {
            "$ref": "#/components/schemas/VesselRestrictions"
          }
        }
      },
      "ServiceSchedule": {
        "type": "object",
        "required": ["serviceId", "frequency"],
        "description": "Service schedule information",
        "properties": {
          "serviceId": {
            "type": "string",
            "description": "Service identifier"
          },
          "frequency": {
            "type": "string",
            "enum": ["DAILY", "WEEKLY", "BIWEEKLY", "MONTHLY"],
            "description": "Service frequency"
          },
          "departures": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScheduledDeparture"
            }
          },
          "transitTime": {
            "$ref": "#/components/schemas/Duration"
          },
          "reliability": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Service reliability percentage"
          }
        }
      },
      "ScheduledDeparture": {
        "type": "object",
        "required": ["departureTime", "vesselName"],
        "description": "Scheduled departure information",
        "properties": {
          "departureTime": {
            "type": "string",
            "format": "date-time",
            "description": "Scheduled departure time"
          },
          "vesselName": {
            "type": "string",
            "description": "Name of the vessel"
          },
          "voyage": {
            "type": "string",
            "description": "Voyage number"
          },
          "status": {
            "type": "string",
            "enum": ["SCHEDULED", "CONFIRMED", "DELAYED", "CANCELLED"],
            "description": "Departure status"
          },
          "operatingHours": {
            "$ref": "#/components/schemas/OperatingHours"
          }
        }
      },
      "OperatingHours": {
        "type": "object",
        "description": "Facility operating hours",
        "properties": {
          "regularHours": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TimeWindow"
            },
            "description": "Regular operating hours"
          },
          "exceptions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OperatingException"
            }
          }
        }
      },
      "OperatingException": {
        "type": "object",
        "required": ["date", "type"],
        "description": "Exception to regular operating hours",
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "description": "Exception date"
          },
          "type": {
            "type": "string",
            "enum": ["HOLIDAY", "MAINTENANCE", "SPECIAL_HOURS"],
            "description": "Type of exception"
          },
          "hours": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TimeWindow"
            },
            "description": "Modified operating hours if applicable"
          },
          "reason": {
            "type": "string",
            "description": "Reason for the exception",
            "example": "Christmas Day"
          }
        }
      },
      "Location": {
        "type": "object",
        "required": ["type", "identifier"],
        "description": "Location information with flexible identification methods",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["PORT", "AIRPORT", "RAIL_TERMINAL", "WAREHOUSE", "ADDRESS"],
            "description": "Type of location"
          },
          "identifier": {
            "type": "object",
            "description": "Location identifier - requires exactly one identification method",
            "oneOf": [
              {
                "$ref": "#/components/schemas/CodeIdentifier"
              },
              {
                "$ref": "#/components/schemas/AddressIdentifier"
              },
              {
                "$ref": "#/components/schemas/CoordinateIdentifier"
              }
            ]
          },
          "facility": {
            "$ref": "#/components/schemas/FacilityDetails"
          },
          "operatingHours": {
            "$ref": "#/components/schemas/OperatingSchedule"
          }
        }
      },
      "CodeIdentifier": {
        "type": "object",
        "required": ["code", "codeType"],
        "description": "Location identification using standard codes",
        "properties": {
          "code": {
            "type": "string",
            "description": "Location code value",
            "example": "USLAX"
          },
          "codeType": {
            "type": "string",
            "enum": ["UN_LOCODE", "IATA", "FACILITY_CODE"],
            "description": "Type of code used"
          }
        }
      },
      "AddressIdentifier": {
        "type": "object",
        "required": ["address"],
        "description": "Location identification using physical address",
        "properties": {
          "address": {
            "type": "object",
            "required": ["country"],
            "properties": {
              "street1": {
                "type": "string",
                "description": "Street address line 1",
                "example": "1000 Harbor Way"
              },
              "street2": {
                "type": "string",
                "description": "Street address line 2",
                "example": "Terminal 5"
              },
              "city": {
                "type": "string",
                "description": "City name",
                "example": "Los Angeles"
              },
              "state": {
                "type": "string",
                "description": "State/province/region",
                "example": "CA"
              },
              "country": {
                "type": "string",
                "pattern": "^[A-Z]{2}$",
                "description": "ISO 3166-1 alpha-2 country code",
                "example": "US"
              },
              "postalCode": {
                "type": "string",
                "description": "Postal/ZIP code",
                "example": "90731"
              }
            }
          }
        }
      },
      "CoordinateIdentifier": {
        "type": "object",
        "required": ["latitude", "longitude"],
        "description": "Location identification using geographical coordinates",
        "properties": {
          "latitude": {
            "type": "number",
            "minimum": -90,
            "maximum": 90,
            "description": "Latitude in decimal degrees",
            "example": 33.7395
          },
          "longitude": {
            "type": "number",
            "minimum": -180,
            "maximum": 180,
            "description": "Longitude in decimal degrees",
            "example": -118.2610
          }
        }
      },
      "FacilityDetails": {
        "type": "object",
        "description": "Additional details about a facility",
        "properties": {
          "name": {
            "type": "string",
            "description": "Facility name",
            "example": "Port of Los Angeles Terminal 5"
          },
          "facilityType": {
            "type": "string",
            "enum": ["CONTAINER_TERMINAL", "BULK_TERMINAL", "WAREHOUSE", "DEPOT", "CFS"],
            "description": "Type of facility"
          },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "REEFER_PLUGS",
                "DANGEROUS_GOODS",
                "OVERWEIGHT_HANDLING",
                "FUMIGATION",
                "CUSTOMS_CLEARANCE"
              ]
            },
            "description": "Available facility capabilities"
          },
          "restrictions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Any restrictions at this facility"
          }
        }
      },
      "OperatingSchedule": {
        "type": "object",
        "description": "Facility operating hours and schedules",
        "properties": {
          "timezone": {
            "type": "string",
            "description": "IANA timezone identifier",
            "example": "America/Los_Angeles"
          },
          "regularHours": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WeeklySchedule"
            }
          },
          "exceptions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScheduleException"
            },
            "description": "Special schedules or closures"
          }
        }
      },
      "WeeklySchedule": {
        "type": "object",
        "required": ["dayOfWeek", "timeWindows"],
        "description": "Regular operating schedule for a day of the week",
        "properties": {
          "dayOfWeek": {
            "type": "string",
            "enum": ["MONDAY", "TUESDAY", "WEDNESDAY", "THURSDAY", "FRIDAY", "SATURDAY", "SUNDAY"],
            "description": "Day of the week"
          },
          "timeWindows": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TimeWindow"
            },
            "description": "Operating time windows for this day"
          }
        }
      },
      "TimeWindow": {
        "type": "object",
        "required": ["startTime", "endTime"],
        "description": "A time window within a day",
        "properties": {
          "startTime": {
            "type": "string",
            "pattern": "^([01]\\d|2[0-3]):([0-5]\\d)$",
            "description": "Start time in 24-hour format (HH:mm)",
            "example": "08:00"
          },
          "endTime": {
            "type": "string",
            "pattern": "^([01]\\d|2[0-3]):([0-5]\\d)$",
            "description": "End time in 24-hour format (HH:mm)",
            "example": "17:00"
          }
        }
      },
      "ScheduleException": {
        "type": "object",
        "required": ["date", "type"],
        "description": "Exception to regular operating schedule",
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date of the exception",
            "example": "2025-12-25"
          },
          "type": {
            "type": "string",
            "enum": ["CLOSED", "MODIFIED_HOURS"],
            "description": "Type of schedule exception"
          },
          "timeWindows": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TimeWindow"
            },
            "description": "Modified operating hours if applicable"
          },
          "reason": {
            "type": "string",
            "description": "Reason for the exception",
            "example": "Christmas Day"
          }
        }
      }
    }
  }
}